<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
    id="plugin.video.iplayer"
    name="iPlayer"
    version="2.7.1"
    provider-name="Alastair, BuZz, Dink, dlake02">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.simplejson" version="3.3.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">Watch TV and listen to radio from the BBC's iPlayer website</summary>
        <description lang="en">
            This XBMC plugin enables (UK only) the playing of TV and Radio catchup content from the BBC IPlayer website. Live radio and TV feeds are also supported.
        </description>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <email>buzz at exotica org uk</email>
        <website>https://github.com/joolswills/plugin.video.iplayer</website>
        <source>https://github.com/joolswills/plugin.video.iplayer.git</source>
    </extension>
</addon>
