<window>
    <defaultcontrol>102</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <animation effect="fade" time="250">WindowOpen</animation>
    <animation effect="fade" time="250">WindowClose</animation>
    <controls>
        <control type="group">
            <posx>100</posx>
            <posy>50</posy>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1090</width>
                <height>600</height>
                <texture border="40">default-panel.png</texture>
            </control>

            <control type="label" id="100">
                <description>textarea</description>
                <posx>200</posx>
                <posy>25</posy>
                <width>690</width>
                <height>40</height>
                <font>font18</font>
                <textcolor>white</textcolor>
                <aligny>center</aligny>
                <align>center</align>
                <label>Translation Editor</label>
                <wrapmultiline>true</wrapmultiline>
            </control>

            <control type="label" id="101">
                <description>textarea</description>
                <posx>200</posx>
                <posy>60</posy>
                <width>690</width>
                <height>40</height>
                <font>font18</font>
                <textcolor>white</textcolor>
                <aligny>center</aligny>
                <align>center</align>
                <label>Leave translation empty to hide tag type in MyPicsDB</label>
                <wrapmultiline>true</wrapmultiline>
            </control>

            <control type="button" id="102">
                <description>Close button</description>
                <posx>30</posx>
                <posy>520</posy>
                <width>300</width>
                <height>40</height>
                <font>font18</font>
                <textcolor>white</textcolor>
                <focusedcolor>yellow</focusedcolor>
                <aligny>center</aligny>
                <align>center</align>
                <label>Close</label>
                <onleft>120</onleft>
                <onright>103</onright>
            </control>

            <control type="image">
                <posx>20</posx>
                <posy>110</posy>
                <width>1060</width>
                <height>2</height>
                <texture>GMseparator.png</texture>
            </control>

            <control type="image">
                <posx>20</posx>
                <posy>510</posy>
                <width>1060</width>
                <height>2</height>
                <texture>GMseparator.png</texture>
            </control>

            <control type="image">
                <posx>20</posx>
                <posy>515</posy>
                <width>1060</width>
                <height>2</height>
                <texture>GMseparator.png</texture>
            </control>      

            <control type="image">
                <posx>20</posx>
                <posy>565</posy>
                <width>1060</width>
                <height>2</height>
                <texture>GMseparator.png</texture>
            </control> 

            <control type="image">
                <posx>20</posx>
                <posy>570</posy>
                <width>1060</width>
                <height>2</height>
                <texture>GMseparator.png</texture>
            </control>      

            <!-- ** Required ** Do not change <id> or <type> -->
            <control type="list" id="120">
                <posx>20</posx>
                <posy>126</posy>
                <width>1040</width>
                <height>380</height>
                <onleft>102</onleft>
                <onright>102</onright>
                <viewtype label="535">list</viewtype>
                <pagecontrol>121</pagecontrol>
                <scrolltime>200</scrolltime>

                <itemlayout height="38">
                    <control type="image">
                        <posx>0</posx>
                        <posy>36</posy>
                        <width>1040</width>
                        <height>2</height>
                        <texture border="10">default-list-nofocus.png</texture>
                    </control>    

                    <control type="label">
                        <posx>40</posx>
                        <posy>0</posy>
                        <width>415</width>
                        <height>38</height>
                        <font>font18</font>
                        <aligny>center</aligny>
                        <textcolor>white</textcolor>
                        <selectedcolor>green</selectedcolor>
                        <align>left</align>
                        <info>ListItem.Label</info>
                    </control>

                    <control type="label">
                        <posx>480</posx>
                        <posy>0</posy>
                        <width>715</width>
                        <height>38</height>
                        <font>font18</font>
                        <aligny>center</aligny>
                        <textcolor>white</textcolor>
                        <selectedcolor>green</selectedcolor>
                        <align>left</align>
                        <info>ListItem.Label2</info>
                    </control>

                </itemlayout>
                <focusedlayout height="38">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1040</width>
                        <height>38</height>
                        <texture border="10">default-list-focus.png</texture>
                        <visible>Control.HasFocus(120)</visible>
                    </control>

                    <control type="label">
                        <posx>40</posx>
                        <posy>0</posy>
                        <width>415</width>
                        <height>38</height>
                        <font>font18</font>
                        <aligny>center</aligny>
                        <textcolor>white</textcolor>
                        <selectedcolor>green</selectedcolor>
                        <align>left</align>
                        <info>ListItem.Label</info>
                    </control>

                    <control type="label">
                        <posx>480</posx>
                        <posy>0</posy>
                        <width>715</width>
                        <height>38</height>
                        <font>font18</font>
                        <aligny>center</aligny>
                        <textcolor>white</textcolor>
                        <selectedcolor>green</selectedcolor>
                        <align>left</align>
                        <info>ListItem.Label2</info>
                    </control>

                </focusedlayout>
            </control>
                <control type="group">
                    <posx>1055</posx>
                    <posy>126</posy>
                    <control type="scrollbar" id="121">
                        <description>scroll bar indicator for lists</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>12</width>
                        <height>380</height>
                        <texturesliderbackground border="6">default-scroll_back.png</texturesliderbackground>
                        <texturesliderbar border="6">default-scroll_mid.png</texturesliderbar>
                        <texturesliderbarfocus border="6">default-scroll_mid.png</texturesliderbarfocus>
                        <textureslidernib>-</textureslidernib>
                        <textureslidernibfocus>-</textureslidernibfocus>
                        <orientation>vertical</orientation>
                        <showonepage>false</showonepage>
                        <visible>Control.IsVisible(120)</visible>
                    </control>
                </control>
        </control>
    </controls>
</window>
