<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.vimeo"
       name="Vimeo"
       version="1.0.2"
       provider-name="TheCollective">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
	<import addon="script.module.beautifulsoup" version="3.0.8"/>
	<import addon="script.module.elementtree" version="1.2.7"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Vimeo video plugin</summary>
    <description>Plugin that allows you to browse and view videos from everybodys favorite alternative video site!</description>
  </extension>
</addon>
