<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<addon id="plugin.video.putiov2"
    name="put.io"
    version="0.0.3"
    provider-name="Aybars Badur (ybrs)">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.simplejson" version="2.0.10" />
        <import addon="script.module.requests" version="1.1.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">Put.io v2</summary>
        <description lang="en">A storage service that fetches media files (from various sources) and lets you stream them immediately. You need to have an oauth key.</description>
        <disclaimer lang="en">You need a Put.io account to use this addon.</disclaimer>        
