<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.popcornflix"
       name="Popcornflix"
       version="6.0.5"
       provider-name="t1m">
  <requires>
    <import addon="xbmc.python" version="2.20.0"/>
    <import addon="script.module.t1mlib" version="1.0.15"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Popcornflix.com Video Addon</summary>
    <description lang="en">Popcornflix offers a broad collection of great movies you can watch right now</description>
    <disclaimer lang="en">Feel free to use this script. For information visit the wiki.</disclaimer>
    <platform>all</platform>
    <language>en</language>
    <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    <forum>http://forum.xbmc.org/showthread.php?tid=198931</forum>
    <website>http://www.popcornflix.com</website>
    <email></email>
    <source>https://github.com/learningit/Kodi-plugins-source</source>
  </extension>
</addon>
