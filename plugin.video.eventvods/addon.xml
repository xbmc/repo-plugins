    	<description lang="sv_SE">Detta är ett inofficielt addon som ger dig tillgång till de senaste esports-evenemangen från eventvods.com.</description>
        <license>GNU General Public License, v2</license>
        <platform>all</platform>
        <assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.jpg</fanart>
        </assets>
   </extension>
</addon>
