<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.brmediathek" name="BR Mediathek" version="2.0.0" provider-name="sarbes">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.libbr" version="2.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <language>de</language>
        <license>GPL-2.0-only</license>
        <forum>https://forum.kodi.tv/showthread.php?tid=353903</forum>
        <source>https://github.com/sarbes/plugin.video.brmediathek</source>
        <website>https://www.br.de/mediathek/</website>
        <summary lang="en_GB">This is an add-on for the BR Mediathek.</summary>
        <description lang="en_GB">This add-on provides access to the BR Mediathek.</description>
        <summary lang="de_DE">Sendebeiträge der BR Mediathek.</summary>
        <description lang="de_DE">Dieses Add-on bietet Zugriff auf die Bibliothek des BR. Zur Auswahl stehen unter anderem Dokumentationen und Serien.</description>
        <disclaimer lang="de_DE">Dieses Add-on wird von keiner Sendeanstalt unterstützt und ist daher inoffiziell.</disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
