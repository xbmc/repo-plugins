<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.on_aol"
       name="On Aol" 
       version="2.0.0" 
       provider-name="divingmule">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup4" version="4.3.2"/>
    <import addon="script.common.plugin.cache" version="2.5.6"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Videos from aol.com/video.</summary>
    <description>
        This add-on lets you watch videos from Aol's video portal aol.com/video.
        There is a large variety of content from Aol and their many partners from across the web.
    </description>
    <platform>all</platform>
    <language>en</language>
    <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    <source>https://github.com/divingmule/plugin.video.on_aol</source>
    <forum>http://forum.kodi.tv/showthread.php?tid=147992</forum>
    <website>http://aol.com/video</website>
  </extension>
</addon>
