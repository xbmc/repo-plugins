<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.yogaglo"
       name="YogaGlo"
       version="0.5.5"
       provider-name="jacobo">
        <requires>
                <import addon="xbmc.python" version="2.1.0"/>
                <import addon="script.module.beautifulsoup" version="3.2.1"/>
                <import addon="script.module.mechanize" version="0.2.6"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py">
                <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
                <language>en</language>
                <platform>all</platform>
                <license>GPL 2.0</license>
                <summary lang="en">Play videos from http://www.yogaglo.com (with account).</summary>
                <description lang="en">
		  Play full-length yoga videos from YogaGlo, provided you have an account with them.
                </description>
                <website>http://www.yogaglo.com</website>
                <source>https://www.github.com/jacobono/plugin.video.yogaglo.git</source>
                <email>daniel.j.mijares@gmail.com</email>
                <forum>http://forum.xbmc.org/forumdisplay.php?fid=154</forum>
		<broken>This add-on is no longer function correctly and not maintained by it's developer.</broken>
        </extension>
</addon>
