<window>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
     </coordinates>
	<animation effect="fade" time="250">WindowOpen</animation>
    <animation effect="fade" time="250">WindowClose</animation>
	
    <controls>
		<control type="group" id="5000">
		    <posx>470</posx>
			<posy>255</posy> 

			<control type="image" id="5001">
				<description>Background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>342</width>
				<height>0</height>
				<texture border="20">DialogBack.png</texture>       
			</control>
			
			<control type="list" id="3000">
				<description>List to hold 'buttons'</description>
				<posx>20</posx>
				<posy>30</posy>
				<width>300</width>
				<height>628</height>
				<onright>3001</onright>
				<onleft>3001</onleft>  
			
				<itemlayout width="300" height="38">                
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>300</width>
						<height>38</height>
						<texture border="5">button-nofocus.png</texture>
					</control>
					<control type="label">
						<posx>150</posx>
						<posy>0</posy>
						<width>280</width>
						<height>38</height>
						<font>fontContextMenu</font>
						<textcolor>FF999999</textcolor>
						<aligny>center</aligny>		    
						<align>center</align>
						<info>ListItem.Label</info>
				   </control>
			   </itemlayout>
	
			   <focusedlayout width="300" height="38">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>300</width>
						<height>38</height>
						<texture border="5">button-nofocus.png</texture>
					</control>
						
					<control type="label">
						<posx>150</posx>
						<posy>0</posy>
						<width>280</width>
						<height>38</height>
						<font>fontContextMenu</font>
						<textcolor>FF999999</textcolor>
						<aligny>center</aligny>		    
						<align>center</align>
						<info>ListItem.Label</info>
					</control>
					
					<control type="image">
						<visible>Control.HasFocus(3000)</visible>
						<posx>0</posx>
						<posy>0</posy>
						<width>300</width>
						<height>38</height>                                        
						<texture border="5" fallback="button-focus2.png">button-focus.png</texture>
					</control>
					
					<control type="label">
						<visible>Control.HasFocus(3000)</visible>
						<posx>150</posx>
						<posy>0</posy>
						<width>280</width>
						<height>38</height>
						<font>fontContextMenu</font>
						<textcolor>white</textcolor>
						<aligny>center</aligny>		    
						<align>center</align>
						<info>ListItem.Label</info>
					</control>
											   
				</focusedlayout>
			</control>  
			
			<control type="button" id="3001">
				<description>Close Window button</description>
				<posx>260</posx>
				<posy>5</posy>
				<width>64</width>
				<height>32</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<visible>system.getbool(input.enablemouse)</visible>			
				<onup>3000</onup>
				<ondown>3000</ondown>
				<onright>3000</onright>
				<onleft>3000</onleft>  
			</control>	
	    </control>
    </controls>
</window>