<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.eventvods" name="Eventvods" version="1.0.1+matrix.1" provider-name="Ikosse">
    <requires>
        <import addon="xbmc.python" 			version="3.0.0" />
        <import addon="script.module.requests"	version="2.22.0+matrix.1"/>
        <import addon="plugin.video.tubed"		version="1.0.3+matrix.1" optional="true"/>
        <import addon="plugin.video.youtube" 	version="6.8.10+matrix.1"/>
        <import addon="plugin.video.twitch" 	version="2.5.3+matrix.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Catch up on esports events completely spoiler free.</summary>
        <summary lang="sv_SE">Få tillgång till de senaste esports-evenemangen helt utan spoilers.</summary>
