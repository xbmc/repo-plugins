<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.iwm" name="IWM Film" version="1.0.0" provider-name="fraser">
    <requires>
        <import addon="xbmc.python" version="2.26.0"/>
        <import addon="script.module.routing" version="0.2.0"/>
        <import addon="script.module.beautifulsoup4" version="4.3.2"/>
        <import addon="script.module.requests" version="2.12.4"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Search and play free movies from the IWM Film website</summary>
        <description lang="en_GB">This add-on enables playing of videos and movies from the IWM Film website.
The collection of 25,000 hours of footage includes public and service information films, documentaries, unedited combat films, official newsreels and amateur films.
        </description>
        <language>en</language>
        <platform>all</platform>
        <license>MIT</license>
        <forum></forum>
        <website>https://film.iwmcollections.org.uk/</website>
        <email>fraser.chapman@gmail.com</email>
        <source>https://github.com/FraserChapman/plugin.video.iwm</source>
        <news>v1.0.0 (17-6-19) - Initial version</news>
        <disclaimer lang="en_GB">Neither this addon nor its author are in anyway affiliated with the Imperial War Museum
        </disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/media/ss1.jpg</screenshot>
            <screenshot>resources/media/ss2.jpg</screenshot>
            <screenshot>resources/media/ss3.jpg</screenshot>
        </assets>
    </extension>
</addon>
