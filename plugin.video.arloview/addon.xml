<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.arloview" name="Arlo Streamer" version="1.0.0" provider-name="JavaWiz">
  <requires>
    <import addon="xbmc.python" version="2.26.0"/>
    <import addon="script.module.arlo" version="1.2.17"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Stream your Arlo cameras in Kodi</summary>
    <description lang="en">List and stream each of your Arlo cameras in Kodi.  This plugin is 
    compatible with Kodi v18 (Leia) and above.
    
    Thanks to Jeffrey D. Walter for creating the python interface 
    to Arlo devices. 
    (https://github.com/jeffreydwalter/arlo)
    </description>
    <source>https://github.com/JavaWiz1/repo-plugins</source>
    <platform>all</platform>
    <license>Apache 2.0</license>
    <email>JavaWiz1@hotmail.com</email>
    <news>
    v1.0.0 (1/1/2019)
    - Initial release
    </news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.png</fanart>
        <screenshot>resources/ArloCamera.png</screenshot>
    </assets>
  </extension>

</addon>