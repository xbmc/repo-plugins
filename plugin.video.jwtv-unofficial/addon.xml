<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
  id="plugin.video.jwtv-unofficial"
  version="1.8.3"
  name="JW Broadcasting (unofficial)"
  provider-name="Jonathan DeMarks">

  <requires>
    <import addon="xbmc.python" version="2.1.0" />
    <import addon="script.module.simplejson" version="3.3.0" />
  </requires>

  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>

  <extension point="xbmc.addon.metadata">
    <summary lang="en">Access to JW Broadcasting</summary>
    <description lang="en">This plugin allows easy access to the content found on tv.jw.org</description>
    <disclaimer lang="en">This is not an offical plugin, please do not contact jw.org for support.</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
