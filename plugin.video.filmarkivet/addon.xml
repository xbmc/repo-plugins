<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.filmarkivet"
       name="Filmarkivet"
       version="3.1.0"
       provider-name="Anders Piniesjö (pugo@pugo.org)">
  <requires>
    <import addon="xbmc.python" version="2.25.0"/>
    <import addon="script.module.beautifulsoup4" version="4.3.2"/>
    <import addon="script.module.requests-cache" version="0.4.13"/>
    <import addon="script.module.requests" version="2.22.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language>sv</language>
    <email>pugo@pugo.org</email>
    <license>GNU General Public License, v3</license>
    <source>https://github.com/pugo/filmarkivet-xbmc</source>
    <forum></forum>
    <website></website>
    <summary lang="en">Watch movies from the Swedish Film Institute film archive</summary>
    <summary lang="sv">Se filmer från Svenska Filminstitutets Filmarkivet</summary>
    <summary lang="de">Filme vom Filmarchiv des schwedisches Filminstituts</summary>
