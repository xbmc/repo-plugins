      <posy>640</posy>
      <width>1180</width>
      <height>410</height>
      <onleft>50</onleft>
      <onright>50</onright>
      <onup>9000</onup>
      <ondown>9000</ondown>
      <scrolltime>200</scrolltime>
      <orientation>horizontal</orientation>
