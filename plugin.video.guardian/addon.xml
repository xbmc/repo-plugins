<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.guardian"
       name="The Guardian"
       version="1.2.2"
       provider-name="Nightflyer">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup" version="3.0.8"/>
    <import addon="plugin.video.youtube" version="4.4.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <language>en</language>
    <platform>all</platform>
    <summary>Video news and features from The Guardian</summary>
    <description>All the latest video content covering news, sport, entertainment and the arts from the Guardian.</description>
    <license>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</license>
    <forum>http://forum.xbmc.org/showthread.php?tid=175703</forum>
    <website>https://github.com/nightflyer73/plugin.video.guardian</website>
    <email></email>
    <source>https://github.com/nightflyer73/plugin.video.guardian</source>
  </extension>
</addon>
