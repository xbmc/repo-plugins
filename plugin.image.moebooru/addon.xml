<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.image.moebooru"
       name="Moebooru"
       version="0.9.6"
       provider-name="Markus Koch">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
  </requires>

  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>image</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Display Moebooru based image boards.</summary>
    <description>View your favorite manga images from any Moebooru based image board. Either browse them quickly through a list of thumbnails or lean back and enjoy a beautiful slideshow.</description>
    <platform>all</platform>
    <license>GNU GENERAL PUBLIC LICENSE. Version 3, June 2007</license>
    <language>en</language>
    <email>markus at notsyncing net</email>
    <website>https://bitbucket.org/C_Classic/xbmc.plugin.image.moebooru/wiki</website>
    <forum>https://bitbucket.org/C_Classic/xbmc.plugin.image.moebooru/issues</forum>
    <source>https://bitbucket.org/C_Classic/xbmc.plugin.image.moebooru</source>
  </extension>
</addon>
