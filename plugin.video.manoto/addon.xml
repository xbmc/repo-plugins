<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.manoto"
       name="Manoto TV"
       version="2.3.0"
       provider-name="babak">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Manoto TV</summary>
    <description lang="en_GB">Manoto TV is a specialist channel broadcasting in Farsi language targeting viewers in Europe and The Middle East. It is a general entertainment channel and comprises a mix of television programmes acquired from other broadcasters and programmes produced by the Marjan TV team at Wimbledon Studios.</description>
    <platform>all</platform>
    <language>fa</language>
    <license>GPL-2.0-or-later</license>
    <website>https://www.manototv.com/</website>
    <email>babak@habibis.net</email>
    <source>https://github.com/bbk79/xbmc-addons</source>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
