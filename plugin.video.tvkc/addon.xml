<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.tvkc"
       name="TV Koper Capodistria"
       version="1.0.1"
       provider-name="Nightflyer">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup" version="3.0.8"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <language>it</language>
    <platform>all</platform>
    <summary lang="it">Archivio programmi di TV Koper Capodistria</summary>
    <summary lang="en">TV Koper Capodistria programme archive</summary>
    <description lang="it">Guarda le trasmissioni presenti nell'archivio programmi di TV Koper Capodistria.</description>
    <description lang="en">Watch TV Koper Capodistria broadcasts.</description>
    <license>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</license>
    <forum>http://forum.xbmc.org/showthread.php?tid=189783</forum>
    <website>https://github.com/nightflyer73/plugin.video.tvkc</website>
    <email></email>
    <source>https://github.com/nightflyer73/plugin.video.tvkc</source>
    <disclaimer lang="it">I video che non funzionano sul sito di TV Koper Capodistria non funzioneranno neanche con questo addon.</disclaimer>
    <disclaimer lang="en">Non working videos on TV Koper Capodistria website won't work with this addon too.</disclaimer>
  </extension>
</addon>
