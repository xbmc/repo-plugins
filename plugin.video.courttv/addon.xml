<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.courttv"
       name="Court TV Live"
       version="4.0.0"
       provider-name="t1m">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.t1mlib" version="4.0.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Court TV Live</summary>
    <description lang="en_GB">Court TV is a broadcast network featuring court room case programming.</description>
    <disclaimer lang="en_GB">Feel free to use this script. For information visit the wiki.</disclaimer>
    <platform>all</platform>
    <language>en</language>
    <license>GPL-2.0-or-later</license>
    <forum>https://forum.kodi.tv/showthread.php?tid=355674</forum>
    <website>buzzr.com</website>
    <source>https://github.com/learningit/repo-plugins</source>
    <news>Version 4.0.0 Initial release for Matrix
    </news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
