<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.npr"
       name="NPR Music Videos"
       version="4.0.0"
       provider-name="t1m">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.t1mlib" version="4.0.4"/>
    <import addon="script.module.requests" version="2.22.0"/>
    <import addon="inputstream.adaptive" version="2.6.0"/>
    <import addon="plugin.video.youtube" optional="true" version="5.4.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">NPR Music Video Addon</summary>
    <description lang="en_GB">NPR Music launched in November 2007 to present public radio music programming and original editorial content for music discovery. It is a project of National Public Radio, a privately and publicly funded non-profit membership media organization that serves as a national syndicator to public radio stations in the United States.</description>
    <disclaimer lang="en_GB">Feel free to use this script. For information visit the wiki.</disclaimer>
    <platform>all</platform>
    <language>en</language>
    <license>GPL-2.0-or-later</license>
    <forum>https://forum.xbmc.org/showthread.php?tid=197118</forum>
    <website>https://www.npr.org/music/</website>
    <source>https://github.com/learningit/repo-plugins</source>
    <news>Version 4.0.0 Update for Matrix version
    </news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
