<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.shoutcast"
       name="Shoutcast"
       version="1.0.1"
       provider-name="Team XBMC">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Shoutcast</summary>
    <summary lang="hu">Shoutcast rádiók</summary> 
    <description lang="en">SHOUTcast Radio offers thousands of free Internet radio
stations from DJs and broadcasters around the world</description>
    <description lang="hu">A SHOUTcast több ezer ingyenes internetes rádiót kínál DJ-k és adók jóvoltából.</description>
  </extension>
</addon>
