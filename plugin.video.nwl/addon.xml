        </news>
        <language>en</language>
        <platform>all</platform>
        <license>GPL-2.0-or-later</license>
        <forum></forum>
        <website>https://northwoodsleague.com/watch/</website>
        <source>https://github.com/tonywagner/plugin.video.nwl</source>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
