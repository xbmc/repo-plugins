<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.wsj"
       name="Wall Street Journal Live"
       version="4.0.0"
       provider-name="t1m">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.t1mlib" version="4.0.5"/>
    <import addon="script.module.requests" version="2.22.0"/>
    <import addon="inputstream.adaptive" version="2.6.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">The Wall Street Journal Live</summary>
    <description lang="en_GB">The Wall Street Journal Live Kodi Add-on</description>
    <disclaimer lang="en_GB">Feel free to use this script. For information visit the wiki.</disclaimer>
    <platform>all</platform>
    <language>en</language>
    <license>GPL-2.0-or-later</license>
    <forum>https://forum.kodi.tv/showthread.php?tid=172865</forum>
    <website>www.wsj.com</website>
    <source>https://github.com/learningit/</source>
    <news>Version 4.0.0 Update for Matrix
    </news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
