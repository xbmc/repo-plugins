<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
  id="plugin.video.jwtv-unofficial"
  version="1.8.3"
  name="JW Broadcasting (unofficial)"
  provider-name="Jonathan DeMarks">

  <requires>
    <import addon="xbmc.python" version="2.1.0" />
  </requires>

  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>

  <extension point="xbmc.addon.metadata">
    <summary>Access to JW Broadcasting</summary>
    <description>This plugin allows easy access to the content found on tv.jw.org</description>
    <disclaimer>This is not an offical plugin, please do not contact jw.org for support.</disclaimer>
    <license>Apache License, Version 2.0</license>
    <platform>all</platform>
  </extension>
</addon>
