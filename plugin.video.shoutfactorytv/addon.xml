    <import addon="xbmc.python" version="2.25.0"/>
    <import addon="script.module.t1mlib" version="1.0.18"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
