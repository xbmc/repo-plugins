<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.drivecast"
       name="Drivecast"
       version="0.2"
       provider-name="InRete">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Drivecast</summary>
    <description lang="en">With DriveCast bring the best from the Internet to your media center: video podcasts, cloud files (Dropbox and Box.net), radio shows.</description>
    <description lang="it">Plugin che ti permette di connetterti al tuo account Drivecast!</description>
  </extension>
</addon>
