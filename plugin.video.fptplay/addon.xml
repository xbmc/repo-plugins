<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.fptplay" name="Fpt Play" version="1.5.2" provider-name="repository.cx.com">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.xbmcswift2" version="2.4.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.service"
			library="start.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language></language>
    <summary lang="en">Vietnam TV Online</summary>
    <description lang="en">This plugin allows you to watch live TV channels in Vietnam - Source from ftp play sites (http://fptplay.net)</description>
  </extension>
</addon>
